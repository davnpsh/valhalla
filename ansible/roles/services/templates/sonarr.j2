version: "3.7"

services:

  sonarr:
    container_name: sonarr
    image: ghcr.io/hotio/sonarr:latest
    restart: unless-stopped
    ports:
      - "{{ valhalla.ip.private }}:8989:8989"
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=002
      - TZ=America/Bogota
    volumes:
      - ./config:/config
      - /media/data/media-library:/data
      
networks:
  default:
    external: true
    name: media
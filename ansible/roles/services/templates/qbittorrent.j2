version: "3.7"

services:

  qbittorrent:
    container_name: qbittorrent
    image: ghcr.io/hotio/qbittorrent:latest
    restart: unless-stopped
    ports:
      - "{{ valhalla.ip.private }}:9000:8080"
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=002
      - TZ=America/Bogota
    volumes:
      - ./config:/config
      - /media/data/media-library:/data

networks:
  default:
    external: true
    name: media
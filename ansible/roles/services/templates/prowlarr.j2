version: "3.7"

services:

  prowlarr:
    container_name: prowlarr
    image: ghcr.io/hotio/prowlarr:latest
    restart: unless-stopped
    ports:
      - "{{ valhalla.ip.private }}:9696:9696"
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=002
      - TZ=America/Bogota
    volumes:
      - ./config:/config

networks:
  default:
    external: true
    name: media
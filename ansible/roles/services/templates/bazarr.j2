version: "3.7"

services:

  bazarr:
    container_name: bazarr
    image: ghcr.io/hotio/bazarr:latest
    restart: unless-stopped
    ports:
      - "{{ valhalla.ip.private }}:6767:6767"
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=002
      - TZ=America/Bogota
    volumes:
      - ./config:/config
      - /media/data/media-library:/data
      
networks:
  default:
    external: true
    name: media
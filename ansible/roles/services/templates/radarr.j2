version: "3.7"

services:

  radarr:
    container_name: radarr
    image: ghcr.io/hotio/radarr:latest
    restart: unless-stopped
    ports:
      - "{{ valhalla.ip.private }}:7878:7878"
    environment:
      - PUID=1000
      - PGID=1000
      - UMASK=002
      - TZ=America/Bogota
    volumes:
      - ./config:/config
      - /media/data/media-library:/data

networks:
  default:
    external: true
    name: media